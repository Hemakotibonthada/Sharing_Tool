# NetShare Pro Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control!

# === SECURITY ===
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Session Cookie Settings (HTTPS recommended for production)
SESSION_COOKIE_SECURE=False
# Set to True in production with HTTPS

# === SERVER SETTINGS ===
FLASK_ENV=development
# Options: development, production, testing
HOST=0.0.0.0
PORT=5001
DEBUG=False

# === SSL/TLS (HTTPS) ===
ENABLE_SSL=False
SSL_CERT_FILE=cert.pem
SSL_KEY_FILE=key.pem

# === FILE UPLOAD SETTINGS ===
UPLOAD_FOLDER=shared_files
VERSION_FOLDER=file_versions
TEMP_FOLDER=temp_uploads

# Max file size (1TB = 1099511627776 bytes)
MAX_FILE_SIZE=1099511627776

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,zip,rar,doc,docx,xls,xlsx,ppt,pptx,txt,mp4,mp3,avi,mov,mkv,csv,json

# === TRANSFER SETTINGS ===
# Chunk size for file transfers (8MB = 8388608 bytes)
CHUNK_SIZE=8388608

# Bandwidth limit in bytes per second (0 = unlimited)
BANDWIDTH_LIMIT=0

# Enable compression before upload
ENABLE_COMPRESSION=False

# === RATE LIMITING ===
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
# For production with Redis: redis://localhost:6379/0

# Default rate limit for all endpoints
RATELIMIT_DEFAULT=100 per hour

# Login attempt rate limit
RATELIMIT_LOGIN_ATTEMPTS=5 per minute

# === DATABASE (Future) ===
# SQLite (development)
DATABASE_URL=sqlite:///netshare.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/netshare

# === CACHING ===
# Cache type: simple (memory), redis (production)
CACHE_TYPE=simple
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# === LOGGING ===
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/netshare.log
LOG_MAX_BYTES=10485760
# 10MB = 10485760 bytes
LOG_BACKUP_COUNT=5

# === EMAIL NOTIFICATIONS (Optional) ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
EMAIL_FROM=noreply@netshare.local

# === CORS SETTINGS ===
# Comma-separated list of allowed origins (* = all, not recommended for production)
CORS_ALLOWED_ORIGINS=*
# For production: https://yourdomain.com,https://app.yourdomain.com

# === STORAGE QUOTAS ===
# Per-user storage quota (10GB = 10737418240 bytes)
DEFAULT_USER_QUOTA=10737418240

# Admin user storage quota (100GB = 107374182400 bytes)
ADMIN_USER_QUOTA=107374182400

# === FILE EXPIRATION ===
# Automatically delete files after X days (0 = never expire)
FILE_EXPIRATION_DAYS=0

# === MONITORING ===
ENABLE_METRICS=True
METRICS_PORT=9090

# === ADMIN CREDENTIALS (CHANGE THESE!) ===
# These are used to create the default admin user on first run
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_EMAIL=admin@netshare.local

# === BACKUPS ===
# Backup directory
BACKUP_DIR=backups

# Auto-backup interval in hours (0 = disabled)
BACKUP_INTERVAL_HOURS=24

# Number of backups to keep
BACKUP_RETENTION_COUNT=7

# === ADVANCED SETTINGS ===
# Max parallel WebSocket connections per client
MAX_PARALLEL_CHUNKS=8

# Session timeout in days
SESSION_TIMEOUT_DAYS=7

# Enable file versioning by default
DEFAULT_VERSIONING_ENABLED=True

# Max versions to keep per file
MAX_FILE_VERSIONS=10

# === FEATURE FLAGS ===
ENABLE_TEXT_SHARING=True
ENABLE_COMMENTS=True
ENABLE_DELETE_REQUESTS=True
ENABLE_FILE_SHARING_LINKS=False
ENABLE_2FA=False
ENABLE_OAUTH=False
